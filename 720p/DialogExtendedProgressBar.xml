<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol />
	<onload condition="Library.IsScanningVideo + Skin.HasSetting(EnableAutoUpdateArt)">SetProperty(UpdateArt,1)</onload>
	<onunload condition="!IsEmpty(Window.Property(UpdateArt)) + Skin.HasSetting(EnableAutoUpdateArt)">XBMC.RunScript(script.artwork.downloader,silent=true)</onunload>
	<onunload condition="!IsEmpty(Window.Property(UpdateArt)) + Skin.HasSetting(EnableAutoUpdateArt)">ClearProperty(UpdateArt)</onunload>
	<animation effect="slide" start="0,70" end="0,0" time="100" condition="!Skin.HasSetting(DisableAnimations)">WindowOpen</animation>
	<animation effect="slide" start="0,0" end="0,70" delay="400" time="100" condition="!Skin.HasSetting(DisableAnimations)">WindowClose</animation>
	<controls>
		<control type="group">
			<left>0</left>
			<top>65r</top>
			<animation effect="slide" end="0,80" time="200" condition="Window.IsVisible(FullscreenVideo) | Window.IsVisible(Visualisation)">conditional</animation>
			<control type="image">
				<description>background image</description>
				<left>0</left>
				<top>10</top>
				<width>380</width>
				<height>60</height>
				<colordiffuse>$VAR[MenuBarColor]</colordiffuse>
				<!--texture border="20">ContentPanel.png</texture-->
				<texture border="0,6,0,6">HomeBack.png</texture>
			</control>
			<control type="label" id="30">
				<description>Header Label</description>
				<left>15</left>
				<top>14</top>
				<width>350</width>
				<height>18</height>
				<font>font10_title</font>
				<textcolor>$VAR[SelectedColor]</textcolor>
				<align>left</align>
				<aligny>center</aligny>
			</control>
			<control type="label" id="31">
				<description>Title Label</description>
				<left>15</left>
				<top>30</top>
				<width>350</width>
				<height>20</height>
				<font>font10</font>
				<textcolor>$VAR[MainColorTwo]</textcolor>
				<align>left</align>
				<aligny>center</aligny>
			</control>
			<control type="progress" id="32">
				<description>progress control</description>
				<left>15</left>
				<top>52</top>
				<width>350</width>
				<height>8</height>
			</control>
		</control>
	</controls>
</window>
