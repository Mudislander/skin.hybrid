<?xml version="1.0" encoding="UTF-8"?>
<window>
	<include condition="!Skin.HasSetting(InitialSetUpRun)">DefaultInitialSetup</include>
	<onload>SetProperty(MenuItemActive,Settings,Home)</onload>
	<defaultcontrol always="true">3</defaultcontrol>
	<controls>
		<control type="image">
			<include>Dimensions_Fullscreen</include>
			<aspectratio>scale</aspectratio>
			<texture background="true">special://skin/backgrounds/settings.jpg</texture>
			<include>BackgroundFade</include>
			<fadetime>FanartCrossfadeTime</fadetime>
			<include>Window_OpenClose_Animation</include>
		</control>
		<include condition="Skin.HasSetting(InitialSetUpRun)">CommonBackground</include>
		<control type="button" id="800">
			<include>InvisibleButton</include>
			<onleft>801</onleft>
			<onright>804</onright>
			<onup>3</onup>
			<ondown>3</ondown>
			<visible>false</visible>
		</control>
		<control type="image">
			<include>Window_OpenClose_Animation</include>
			<include>VisibleFadeEffect</include>
			<left>480</left>
			<top>0</top>
			<width>800</width>
			<height>720</height>
			<aspectratio>stretch</aspectratio>
			<texture>black-back.png</texture>
		</control>
		<include>BehindDialogFadeOut</include>
		<include>MediaViewBackgrounds</include>
		<include>FloorReturnButtons</include>
		<control type="label">
			<left>55</left>
			<top>5</top>
			<width>1170</width>
			<height>30</height>
			<font>font30_title</font>
			<textcolor>$VAR[MainColorOne]</textcolor>
			<scroll>true</scroll>
			<align>center</align>
			<aligny>center</aligny>
			<include>Window_OpenClose_Animation</include>
			<label>[UPPERCASE]$INFO[Control.GetLabel(2)] - $INFO[Control.GetLabel(20)] $LOCALIZE[5][/UPPERCASE]</label>
		</control>
		<control type="label">
			<left>10</left>
			<top>45</top>
			<width>1260</width>
			<height>20</height>
			<font>font12_title</font>
			<textcolor>grey2</textcolor>
			<wrapmultiline>true</wrapmultiline>
			<scroll>false</scroll>
			<align>center</align>
			<aligny>center</aligny>
			<include>Window_OpenClose_Animation</include>
			<label>$INFO[Window(home).Property(SettingsItemActive)]</label>
		</control>
		<control type="group">
			<left>80</left>
			<top>20</top>
			<include condition="!Skin.HasSetting(DisableAnimations)">AnimatedOpenWindow</include>
			<control type="grouplist" id="3">
				<description>left button area</description>
				<left>80</left>
				<top>120</top>
				<width>430</width>
				<height>600</height>
				<itemgap>-1</itemgap>
				<onleft>5</onleft>
				<onright>5</onright>
				<onup>3</onup>
				<ondown>3</ondown>
				<animation type="Focus" reversible="false">
					<animation effect="zoom" start="65" end="125" center="380,51" time="200">Focus</animation>
					<effect type="fade" start="90" end="100" time="200" />
				</animation>
				<animation type="UnFocus" reversible="false">
					<animation effect="zoom" start="125" end="65" center="380,51" time="200">UnFocus</animation>
					<effect type="fade" start="100" end="90" time="200" />
				</animation>
			</control>
			<control type="button" id="20">
				<include>InvisibleButton</include>
				<visible>false</visible>
			</control>
			<control type="button" id="99">
				<left>415</left>
				<top>80</top>
				<width>750</width>
				<height>40</height>
				<font>font13</font>
				<label>$LOCALIZE[10130]</label>
				<label2>[COLOR=$VAR[SelectedColor]]$INFO[Control.GetLabel(20)][/COLOR]</label2>
				<textcolor>$VAR[MainColorOne]</textcolor>
				<focusedcolor>$VAR[MainColorTwo]</focusedcolor>
				<texturefocus colordiffuse="$VAR[MenuBarColor]">MenuItemFO.png</texturefocus>
				<texturenofocus>MenuItemNF.png</texturenofocus>
				<onclick>settingslevelchange</onclick>
				<onleft>3</onleft>
				<onright>60</onright>
				<onup>5</onup>
				<ondown>5</ondown>
			</control>
			<control type="image" id="98">
				<left>415</left>
				<top>122</top>
				<width>750</width>
				<height>2</height>
				<texture colordiffuse="$VAR[MainColorOne]">separator2.png</texture>
			</control>
			<control type="grouplist" id="5">
				<description>right control area</description>
				<left>415</left>
				<top>140</top>
				<width>750</width>
				<height>395</height>
				<itemgap>-1</itemgap>
				<pagecontrol>60</pagecontrol>
				<onleft>3</onleft>
				<onright>60</onright>
				<onup>99</onup>
				<ondown>99</ondown>
			</control>
			<control type="ScrollBar" id="60">
				<left>1170</left>
				<top>140</top>
				<width>25</width>
				<height>385</height>
				<include>PageScrollBar</include>
				<onleft>5</onleft>
				<onright>800</onright>
				<showonepage>true</showonepage>
				<orientation>vertical</orientation>
			</control>
			<control type="textbox" id="6">
				<description>description area</description>
				<left>415</left>
				<top>540</top>
				<width>775</width>
				<height>85</height>
				<font>font12</font>
				<align>justify</align>
				<textcolor>$VAR[MainColorTwo]</textcolor>
				<autoscroll delay="3000" time="1800" repeat="10000">!Skin.HasSetting(DisableAutoScroll)</autoscroll>
			</control>
		</control>
		<control type="button" id="10">
			<description>Default Category Button</description>
			<height>60</height>
			<width>300</width>
			<textoffsetx>0</textoffsetx>
			<align>right</align>
			<aligny>center</aligny>
			<font>font24_title</font>
			<textcolor>grey2</textcolor>
			<focusedcolor>$VAR[MainColorTwo]</focusedcolor>
			<texturefocus>-</texturefocus>
			<texturenofocus>-</texturenofocus>
			<pulseonselect>false</pulseonselect>
			<animation effect="zoom" start="110" end="145" center="300,30" time="200">Focus</animation>
			<animation effect="zoom" start="145" end="110" center="300,30" time="200">UnFocus</animation>
		</control>
		<control type="button" id="7">
			<description>Default Button</description>
			<left>0</left>
			<top>0</top>
			<height>40</height>
			<font>font13</font>
			<textcolor>grey2</textcolor>
			<focusedcolor>$VAR[MainColorTwo]</focusedcolor>
			<invalidcolor>invalid</invalidcolor>
			<texturefocus border="0,2,0,2" colordiffuse="$VAR[MenuBarColor]">MenuItemFO.png</texturefocus>
			<texturenofocus border="0,2,0,2">MenuItemNF.png</texturenofocus>
		</control>
		<control type="radiobutton" id="8">
			<description>Default RadioButton</description>
			<left>0</left>
			<top>0</top>
			<height>40</height>
			<font>font13</font>
			<textcolor>grey2</textcolor>
			<focusedcolor>$VAR[MainColorTwo]</focusedcolor>
			<texturefocus border="0,2,0,2" colordiffuse="$VAR[MenuBarColor]">MenuItemFO.png</texturefocus>
			<texturenofocus border="0,2,0,2">MenuItemNF.png</texturenofocus>
		</control>
		<control type="spincontrolex" id="9">
			<description>Default SpinControlex</description>
			<left>0</left>
			<top>0</top>
			<height>40</height>
			<font>font13</font>
			<textcolor>grey2</textcolor>
			<focusedcolor>$VAR[MainColorTwo]</focusedcolor>
			<texturefocus border="0,2,0,2" colordiffuse="$VAR[MenuBarColor]">MenuItemFO.png</texturefocus>
			<texturenofocus border="0,2,0,2">MenuItemNF.png</texturenofocus>
			<aligny>center</aligny>
			<reverse>yes</reverse>
		</control>
		<control type="image" id="11">
			<description>separator image</description>
			<height>2</height>
			<texture colordiffuse="$VAR[MainColorOne]">separator2.png</texture>
		</control>
		<control type="label" id="2">
			<description>Fake Label so we can pass it value down to the one below</description>
			<left>0</left>
			<top>0</top>
			<width>0</width>
			<height>0</height>
			<visible>false</visible>
		</control>
		<include>CommonNowPlaying</include>
		<include>BottonLogoImage</include>
		<include>BottomClock</include>
	</controls>
</window>
