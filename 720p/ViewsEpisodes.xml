<?xml version="1.0" encoding="utf-8"?>
<includes>
	<include name="Episode">
		<control type="group">
			<visible>Control.IsVisible(728)</visible>
			<include>VisibleFadeEffect</include>
			<left>0</left>
			<top>55</top>
			<control type="wraplist" id="728">
				<viewtype label="$LOCALIZE[20360]">list</viewtype>
				<left>100</left>
				<top>50</top>
				<width>1150</width>
				<height>525</height>
				<scrolltime>0</scrolltime>
				<orientation>vertical</orientation>
				<movement>3</movement>
				<focusposition>4</focusposition>
				<onup>728</onup>
				<ondown>728</ondown>
				<onleft>2</onleft>
				<onright>800</onright>
				<pagecontrol>-</pagecontrol>
				<visible>Window.IsActive(videolibrary) + Container.Content(Episodes)</visible>
				<itemlayout width="600" height="60">
					<control type="label">
						<left>20</left>
						<top>0</top>
						<width>80</width>
						<height>60</height>
						<align>right</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Episode]</label>
						<font>font28_title</font>
						<textcolor>$VAR[MainColorOne]</textcolor>
						<selectedcolor>$VAR[MainColorTwo]</selectedcolor>
					</control>
					<control type="label">
						<left>125</left>
						<top>8</top>
						<width>633</width>
						<height>60</height>
						<align>left</align>
						<label>$INFO[ListItem.Label]</label>
						<font>font24_title</font>
						<textcolor>$VAR[MainColorTwo]</textcolor>
						<selectedcolor>$VAR[MainColorTwo]</selectedcolor>
						<visible>IsEmpty(ListItem.Title)</visible>
					</control>
					<control type="label">
						<left>125</left>
						<top>8</top>
						<width>633</width>
						<height>60</height>
						<align>left</align>
						<label>$INFO[ListItem.Title]</label>
						<font>font24_title</font>
						<textcolor>$VAR[MainColorTwo]</textcolor>
						<selectedcolor>$VAR[MainColorTwo]</selectedcolor>
						<visible>!IsEmpty(ListItem.Title)</visible>
					</control>
					<control type="label">
						<left>125</left>
						<top>36</top>
						<width>633</width>
						<height>60</height>
						<align>left</align>
						<label>$INFO[ListItem.Premiered,$LOCALIZE[31342]: ]</label>
						<font>font12</font>
						<textcolor>$VAR[MainColorTwo]</textcolor>
						<selectedcolor>$VAR[MainColorTwo]</selectedcolor>
					</control>
				</itemlayout>
				<focusedlayout width="600" height="164">
					<control type="image">
						<left>13</left>
						<top>13</top>
						<width>253</width>
						<height>139</height>
						<texture background="true" colordiffuse="$VAR[MainColorOne]" diffuse="episodematte.png">DefaultLogoReturn.png</texture>
						<aspectratio scalediffuse="false">keep</aspectratio>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="127,70" start="50" end="100" time="200" tween="cubic" easing="out" />
						</animation>
						<visible>IsEmpty(ListItem.Title)</visible>
					</control>
					<control type="image">
						<left>13</left>
						<top>13</top>
						<width>253</width>
						<height>139</height>
						<texture fallback="SmallFanartFallback.jpg" background="true" diffuse="episodematte.png">$INFO[ListItem.Thumb]</texture>
						<aspectratio scalediffuse="false">scale</aspectratio>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="127,70" start="50" end="100" time="200" tween="cubic" easing="out" />
						</animation>
						<visible>!IsEmpty(ListItem.Title) + !Skin.HasSetting(HideEpisodeThumb)</visible>
					</control>
					<control type="image">
						<left>13</left>
						<top>13</top>
						<width>253</width>
						<height>139</height>
						<texture fallback="SmallFanartFallback.jpg" diffuse="episodematte.png">$VAR[MediaClearArt]</texture>
						<!--texture fallback="SmallFanartFallback.jpg" diffuse="episodematte.png">$INFO[ListItem.Art(fanart)]</texture-->
						<aspectratio scalediffuse="false">stretch</aspectratio>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="127,70" start="50" end="100" time="200" tween="cubic" easing="out" />
						</animation>
						<visible>!IsEmpty(ListItem.Title) + Skin.HasSetting(HideEpisodeThumb)</visible>
					</control>
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>278</width>
						<height>164</height>
						<texture>episodeframe.png</texture>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="127,70" start="50" end="100" time="200" tween="cubic" easing="out" />
							<effect type="fade" start="0" end="100" time="200" />
						</animation>
						<visible>!IsEmpty(ListItem.Title)</visible>
					</control>
					<control type="image">
						<left>161</left>
						<top>13</top>
						<width>105</width>
						<height>105</height>
						<fadetime>IconCrossfadeTime</fadetime>
						<texture>$VAR[StatusBanner,StatusBanner/,.png]</texture>
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="127,70" start="50" end="100" time="200" tween="cubic" easing="out" />
							<effect type="fade" start="0" end="100" time="200" />
						</animation>
						<visible>!Skin.HasSetting(DisableWatchedCheck) + !IsEmpty(ListItem.Overlay)</visible>
					</control>
					<control type="label">
						<description>INFO txt</description>
						<left>292</left>
						<top>5</top>
						<width>830</width>
						<height>20</height>
						<label>[COLOR=$VAR[MainColorOne]]$LOCALIZE[31342]:[/COLOR] $INFO[ListItem.premiered]</label>
						<align>left</align>
						<aligny>top</aligny>
						<font>font12</font>
						<textcolor>$VAR[MainColorTwo]</textcolor>
						<shadowcolor>black</shadowcolor>
						<wrapmultiline>false</wrapmultiline>
						<animation type="Focus" reversible="false">
							<effect type="fade" start="0" end="100" time="200" />
						</animation>
						<visible>!IsEmpty(ListItem.premiered)</visible>
					</control>
					<control type="label">
						<left>292</left>
						<top>25</top>
						<width>830</width>
						<label>[COLOR=$VAR[MainColorOne]]$INFO[ListItem.Episode][/COLOR]. $INFO[ListItem.Title]</label>
						<font>font24_title</font>
						<textcolor>$VAR[MainColorTwo]</textcolor>
						<selectedcolor>$VAR[MainColorTwo]</selectedcolor>
						<animation type="Focus" reversible="false">
							<effect type="fade" start="0" end="100" time="200" />
						</animation>
						<visible>!IsEmpty(ListItem.Title)</visible>
					</control>
				</focusedlayout>
			</control>
			<control type="image">
				<left>380r</left>
				<top>100</top>
				<width>300</width>
				<height>116</height>
				<fadetime>IconCrossfadeTime</fadetime>
				<aspectratio aligny="bottom">keep</aspectratio>
				<texture background="true">$INFO[ListItem.Art(tvshow.clearlogo)]</texture>
				<visible>Control.IsVisible(728) + !StringCompare(ListItem.Label,..) + Container.Content(Episodes)</visible>
			</control>
			<control type="textbox">
				<animation effect="slide" end="0,60" time="0" condition="Container(728).Row(1)">Conditional</animation>
				<animation effect="slide" end="0,120" time="0" condition="Container(728).Row(2)">Conditional</animation>
				<animation effect="slide" end="0,180" time="0" condition="Container(728).Row(3)">Conditional</animation>
				<animation effect="slide" end="0,240" time="0" condition="Container(728).Row(4)">Conditional</animation>
				<animation effect="slide" end="0,300" time="0" condition="Container(728).Row(5)">Conditional</animation>
				<animation effect="slide" end="0,360" time="0" condition="Container(728).Row(6)">Conditional</animation>
				<animation effect="slide" end="0,420" time="0" condition="Container(728).Row(7)">Conditional</animation>
				<left>400</left>
				<top>112</top>
				<width>830</width>
				<height>100</height>
				<align>justify</align>
				<font>font12</font>
				<textcolor>$VAR[MainColorOne]</textcolor>
				<label>$VAR[VideoDescription]</label>
				<selectedcolor>$VAR[MainColorTwo]</selectedcolor>
				<animation type="Conditional" reversible="false" condition="Control.HasFocus(728) + [!Container(728).OnNext + !Container(728).OnPrevious]">
					<effect type="fade" start="0" end="100" time="200" />
				</animation>
				<autoscroll delay="3000" time="1800" repeat="10000">!Skin.HasSetting(DisableAutoScroll)</autoscroll>
			</control>
		</control>
	</include>
</includes>
