								<posy>47</posy>
								<width>105</width>
								<height>105</height>
								<fadetime>IconCrossfadeTime</fadetime>
								<texture background="true" fallback="DefaultFallback/DefaultUnwatched.png">UsrStatus/$LOCALIZE[16101].png</texture>
