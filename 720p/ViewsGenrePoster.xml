							<animation reversible="false" effect="zoom" end="30,50,177,290" start="10,5,233,361" time="200">unfocus</animation>
						</control>
						<control type="group">
							<visible>Skin.HasSetting(UseStatusBanners) + !IsEmpty(ListItem.Overlay)</visible>
							<control type="image">
								<posx>102</posx>
								<posy>50</posy>
								<width>105</width>
								<height>105</height>
								<fadetime>IconCrossfadeTime</fadetime>
								<texture background="true" fallback="DefaultFallback/DefaultWatched.png">UsrStatus/$LOCALIZE[16102].png</texture>
