							<visible>Container.Content(Movies) + ListItem.IsFolder + !stringcompare(ListItem.Label,..) + SubString(Container.Folderpath,videodb://,left)</visible>
						</control>
						<control type="group">	
							<posx>-2</posx>
							<posy>36</posy>
							<control type="image">
								<width>222</width>
								<height>318</height>
								<aspectratio>stretch</aspectratio>
								<texture fallback="ClearCase/dv.png">$VAR[VideoListCase,ClearCase/,.png]</texture>
								<animation reversible="false" effect="zoom" start="-2,36,222,318" end="-28,0,284,390" time="200">focus</animation>
								<animation reversible="false" effect="zoom" end="-2,36,222,318" start="-28,0,284,390" time="200">unfocus</animation>
								<visible>!StringCompare(ListItem.Label,..)</visible>
							</control>
						</control>
