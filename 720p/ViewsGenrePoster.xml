							<visible>!Skin.HasSetting(HideSubTitleFlags) + !IsEmpty(ListItem.SubtitleLanguage)</visible>
						</control>	
						<control type="image">
							<posx>32</posx>
							<posy>308</posy>
							<width>44</width>
							<height>26</height>
							<animation reversible="false" effect="zoom" start="32,308,44,26" end="12,334,48,28" time="200">focus</animation>
							<animation reversible="false" effect="zoom" end="32,308,44,26" start="12,334,48,28" time="200">unfocus</animation>
