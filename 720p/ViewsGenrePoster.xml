							<posx>2</posx>
							<posy>40</posy>
							<control type="image">
								<width>214</width>
								<height>310</height>
								<aspectratio>stretch</aspectratio>
								<texture fallback="ClearCase/dv.png">$VAR[VideoListCase,ClearCase/,.png]</texture>
								<visible>!StringCompare(ListItem.Label,..)</visible>
							</control>
						</control>
					</control>
				</itemlayout>
